<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow android:id="@id/TableRow03" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="5.0dip">
        <Button android:layout_gravity="fill_vertical|center|left" android:id="@id/exportdbtosdbutton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ExportDB" android:layout_weight="1.0" />
        <Button android:layout_gravity="fill_vertical|center" android:id="@id/exportdbxmltosdbutton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ExportXML" android:layout_weight="1.0" />
    </TableRow>
    <TableRow android:id="@id/TableRow04" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:layout_gravity="fill_vertical|center|left" android:id="@id/ImportDBButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ImportDB" android:layout_weight="1.0" />
        <Button android:layout_gravity="fill_vertical|center|right" android:id="@id/ExportLoc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ExportLocation" android:layout_weight="1.0" />
    </TableRow>
    <TableRow android:id="@id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textStyle="bold" android:id="@id/Path" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Path will show here after export" />
    </TableRow>
    <TableRow android:layout_gravity="center" android:id="@id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@id/Output" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@id/TextView01" />
    </TableRow>
</LinearLayout>